<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1D2733"
    tools:context="com.example.practice1.BasePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/tTitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#34495E"
            android:gravity="center"
            android:text="Activity Reminder"
            android:textColor="#FFFFFD"
            android:textSize="23dp"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="parent"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/bProgress"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="76dp"
            android:layout_marginRight="76dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_edge"
            android:textColor="#C1C0BC"
            android:onClick="goToProgress"
            android:text="Progress"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tTitle"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <Button
            android:id="@+id/bNearBy"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="76dp"
            android:layout_marginRight="76dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edge"
            android:onClick="goToPlace"
            android:text="Near By"
            android:textColor="#C1C0BC"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bProgress"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <Button
            android:id="@+id/bWeather"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edge"
            android:text="Weather"
            android:textColor="#C1C0BC"
            android:onClick="goToWeather"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/bNearBy"
            android:layout_marginRight="76dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="76dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/bFriends"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edge"
            android:text="Available Friends"
            android:textColor="#C1C0BC"
            android:onClick="goToFriends"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/bWeather"
            android:layout_marginRight="76dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="76dp"
            app:layout_constraintLeft_toLeftOf="parent" />


        <Button
            android:id="@+id/bConfig"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edge"
            android:onClick="goToConfiguration"
            android:text="Configuration"
            android:textColor="#C1C0BC"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/bWorkoutScheduler"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginLeft="76dp"
            android:layout_marginRight="76dp" />

        <Button
            android:id="@+id/bWorkoutScheduler"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edge"
            android:onClick="goToWorkoutScheduler"
            android:text="Schedule Workout"
            android:textColor="#C1C0BC"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/bFriends"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginLeft="76dp"
            android:layout_marginRight="76dp" />


</android.support.constraint.ConstraintLayout>



