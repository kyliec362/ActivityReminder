<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="goToBasePage"
    android:background="#1D2733"
    tools:context="com.example.practice1.Quickview">

        <TextView
            android:id="@+id/city_field"
            android:layout_width="117dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


        <TextView
            android:id="@+id/current_temperature_field"
            android:layout_width="126dp"
            android:layout_height="31dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="22dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/humidity_field" />

        <TextView
            android:id="@+id/details_field"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:layout_below="@+id/weather_icon"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/weather_icon"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:id="@+id/humidity_field"
            android:layout_width="182dp"
            android:layout_height="31dp"
            android:layout_below="@+id/details_field"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/details_field"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:id="@+id/weather_icon"
            android:layout_width="122dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/city_field"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="154dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:text="Weather"
            android:textColor="#FFFFFF"
            android:textSize="36dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/availability"
            android:layout_width="183dp"
            android:layout_height="44dp"
            android:text="Availability"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="0dp"
            android:textSize="36dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="30dp"
            tools:layout_editor_absoluteX="201dp" />

        <TextView
            android:id="@+id/availabilityText"
            android:layout_width="159dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/availability"
            android:layout_marginRight="8dp"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>